{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>whitesource/merge-confidence:beta",
    ":preserveSemverRanges",
    "group:all",
    "config:base"
  ],
  "groupName": "all dependencies",
  "separateMajorMinor": true,
  "groupSlug": "all",
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "matchPackagePatterns": ["*"]
    }
  ]
}
